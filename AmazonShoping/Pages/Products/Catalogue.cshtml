@page
@model AmazonShoping.Pages.Products.CatalogueModel

@{
    ViewData["Title"] = "Catalogue";
}
<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Sook.ma</h1>
                </div>
            </div>
            <div class="col-lg-7">

            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->

<p>
    <a asp-page="Admin">Products Management</a>
</p>


<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Product) {
                <!-- Start Product Card Template -->
                <div class="col-12 col-md-4 col-lg-3 mb-5">
                    <a class="product-item" asp-page="./Details" asp-route-id="@item.Id">
                        <img src="~/products_images/@item.ImageURL" alt="@item.Title" class="img-fluid product-thumbnail">
                        <h3 class="product-title">@item.Title</h3>
                        <strong class="product-price">@Html.DisplayFor(modelItem => item.Price)</strong>

                        <span class="icon-cross">
                            <img src="images/cross.svg" class="img-fluid">
                        </span>
                    </a>
                </div>
                <!-- End Product Card Template -->
            }
        </div>
    </div>
</div>